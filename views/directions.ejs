<%- include ("./partials/head.ejs") %>
<h3>You're going from <%= directions.startLocation.locationString %> to the Device Lab</h3>
<p>Good luck with the journey, see directions below!</p>
<button class="view-button">Toggle Card view</button>
<section>
    <% directions.maneuvers.forEach((maneuver, index) => { %>
        <article tabindex="0">
            <h1><%= maneuver.step + 1 %>.</h1>
            <% if (maneuver.distance === 0) { %>
                <h3>You are at your destination: <%= maneuver.narrative %> </h3>
            <% }else{ %>
                <h3>After <%= (maneuver.distance * 1000) %> m: </h3>
                <h4> <%= maneuver.narrative %> </h4>
            <% } %>
            <img src="<%= directions.maps[index] %>" alt="Map of step <%= maneuver.step + 1 %>"/>
        </article>
    <% }); %>
</section>
<form id="directions-home-form" action="/" method="GET"></form>
<button type="submit" form="directions-home-form" class="home-button"><span>NEW ROUTE</span></button>

<%- include ("./partials/footer.ejs") %>